{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "schedule:weekends",
    ":approveMajorUpdates",
    "group:allDigest",
    "group:recommended",
    ":automergeMinor",
    ":automergePatch",
    ":automergeDigest",
    ":automergePr",
    ":docker",
    ":semanticCommits",
    ":label(renovate)"
  ],
  "ignorePaths": [
    "deploy/**",
    "docker-compose*.yml",
    "docs/**",
    "kustomization.yaml"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/Dockerfile$/",
        "/(^|/)(workflow-templates|\\.(?:github|gitea|forgejo)/(?:workflows|actions))/.+\\.ya?ml$/"
      ],
      "matchStrings": [
        "VER=(?<currentValue>.*?) # renovate: depName=(?<depName>.*?)\\n"
      ],
      "datasourceTemplate": "github-releases"
    }
  ]
}
