{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "schedule:automergeEarlyMondays",
    "schedule:weekends",
    ":automergeDigest",
    ":automergePr"
  ],
  "prConcurrentLimit": 10,
  "branchConcurrentLimit": 5,
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "major"],
      "automerge": false
    },
    {
      "matchUpdateTypes": ["patch", "digest", "pin"],
      "groupName": "patch and digest dependencies",
      "groupSlug": "patch-digest-deps",
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true,
      "labels": ["renovate", "dependencies", "batch"]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/Dockerfile$/"],
      "matchStrings": [
        "VER=(?<currentValue>.*?) # renovate: depName=(?<depName>.*?)\\n"
      ],
      "datasourceTemplate": "github-releases"
    }
  ]
}
